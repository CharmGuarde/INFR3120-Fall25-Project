<!--contact form with glass effect, white text-->

<div class="glass-card p-4" style="max-width: 500px; width: 100%;">
  <h2 class="text-center text-white mb-3">Contact Us</h2>
<!-- simple contact form with name, email, message fields and submit button -->
  <form>
    <input type="text" class="form-control mb-3" placeholder="Your Name">
    <input type="email" class="form-control mb-3" placeholder="Your Email">
    <textarea class="form-control mb-3" rows="4" placeholder="Your Message"></textarea>

    <button class="btn btn-primary glass-btn w-100">Send</button>
  </form>
</div>
