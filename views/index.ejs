<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light">
  <div class="container py-5">

    <header class="text-center mb-4">
      <img src="/logo.png" alt="Task Manager Logo" class="mb-3" style="height:80px;border-radius:20px;">
      <h1 class="text-primary fw-bold">Task Manager</h1>
      <a href="/" class="btn btn-outline-secondary mt-2">Home</a>
    </header>

    <!-- Add Task -->
    <div class="card shadow-sm mb-4">
      <div class="card-body">
        <form action="/add" method="POST" class="row g-3">
          <div class="col-md-5">
            <input type="text" name="title" class="form-control" placeholder="Task Title" required>
          </div>
          <div class="col-md-5">
            <input type="text" name="description" class="form-control" placeholder="Description">
          </div>
          <div class="col-md-2 d-grid">
            <button class="btn btn-primary" type="submit">Add</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Task List -->
    <div class="card shadow-sm">
      <div class="card-body">
        <h3>Your Tasks</h3>

        <% if (tasks.length === 0) { %>
          <p class="text-muted">No tasks yet. Add one above!</p>
        <% } else { %>
          <table class="table table-hover">
            <thead class="table-dark">
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% tasks.forEach(t => { %>
                <tr>
                  <td><%= t.title %></td>
                  <td><%= t.description %></td>
                  <td>
                    <!-- Edit Button -->
                    <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal<%= t._id %>">Edit</button>

                    <!-- Delete Button -->
                    <form action="/delete/<%= t._id %>" method="POST" style="display:inline;">
                      <button class="btn btn-danger btn-sm">Delete</button>
                    </form>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="editModal<%= t._id %>" tabindex="-1" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <form action="/edit/<%= t._id %>" method="POST">
                            <div class="modal-header">
                              <h5>Edit Task</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                              <input type="text" name="title" class="form-control mb-2" value="<%= t.title %>" required>
                              <input type="text" name="description" class="form-control" value="<%= t.description %>">
                            </div>
                            <div class="modal-footer">
                              <button type="submit" class="btn btn-success">Save</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
