<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <link rel="stylesheet" href="/styles.css">
</head>

<body class="tasks-bg"> <!-- custom background for tasks page -->
<%- include('partials/navbar'); %>

  <div class="container py-5"> <!-- main container with padding -->

    <!-- header -->
    <div class="text-center mb-4"> <!-- centers content and adds margin bottom -->
      <img src="/logo.png" alt="Logo" style="height: 80px; border-radius: 20px;"> <!-- logo image -->
      <h1 class="mt-3">Task Manager</h1> <!-- main title -->
      <a href="/" class="btn btn-outline-secondary mt-2">Back to Home</a> 
    </div>

    <!-- add task form -->
    <div class="card shadow-sm mb-4"> <!-- card for the form with margin bottom -->
      <div class="card-body"> <!-- card body --> 
        <form action="/add" method="POST" class="row g-3"> <!-- form with grid layout and gutters -->
          <div class="col-md-5"> <!-- input for task title -->
            <input type="text" name="title" class="form-control" placeholder="Task Title" required> <!-- required field -->
          </div> 
          <div class="col-md-5"> <!-- input for task description -->
            <input type="text" name="description" class="form-control" placeholder="Description"> <!-- optional field -->
          </div>
          <div class="col-md-2 d-grid"> <!-- button container to make button full width -->
            <button class="btn btn-primary">Add</button> 
          </div>
        </form>
      </div>
    </div>

    <!-- task list -->
    <div class="card shadow-sm"> <!-- card for task list -->
      <div class="card-body"> <!-- card body -->
        <h3>Your Tasks</h3> 

        <% if (tasks.length === 0) { %> <!-- check if there are no tasks -->
          <p class="text-muted">No tasks yet. Add one above!</p> <!-- message for no tasks -->
        <% } else { %> <!-- if there are tasks, display them in a table -->
          <table class="table table-hover"> <!-- hover effect on rows -->
            <thead class="table-dark"> <!-- dark header -->
              <tr> <!-- table headers -->
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% tasks.forEach(t => { %> <!-- loop through tasks -->
                <tr> <!-- table row for each task -->
                  <td><%= t.title %></td> <!-- task title -->
                  <td><%= t.description %></td>
                  <td>
                    <!-- edit button -->
                    <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal<%= t._id %>"> <!-- small warning button -->
                      Edit
                    </button>

                    <!-- delete -->
                    <form action="/delete/<%= t._id %>" method="POST" style="display:inline;"> <!-- inline form for delete -->
                      <button class="btn btn-danger btn-sm">Delete</button> 
                    </form>

                    <!-- edit modal -->
                    <div class="modal fade" id="editModal<%= t._id %>" tabindex="-1"> <!-- modal for editing task -->
                      <div class="modal-dialog"> <!-- modal dialog -->
                        <div class="modal-content"> <!-- modal content -->
                          <form action="/edit/<%= t._id %>" method="POST"> <!-- form for editing task -->
                            <div class="modal-header"> <!-- modal header -->
                              <h5>Edit Task</h5> 
                              <button type="button" class="btn-close" data-bs-dismiss="modal"></button> 
                            </div>

                            <div class="modal-body"> <!-- modal body -->
                              <input type="text" name="title" class="form-control mb-2" value="<%= t.title %>" required> <!-- required title field -->
                              <input type="text" name="description" class="form-control" value="<%= t.description %>"> <!-- optional description field -->
                            </div>

                            <div class="modal-footer"> <!-- modal footer -->
                              <button class="btn btn-success">Save Changes</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>

                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <%- include('partials/footer'); %>

</body>
</html>
