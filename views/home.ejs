<div class="page-container d-flex flex-column justify-content-center align-items-center">

  <!-- Center Logo BACK -->
  <img src="/logo.png" class="site-logo mb-4" alt="Logo">

  <div class="container">
    <div class="row justify-content-center align-items-center">

      <!-- Left Images -->
      <div class="col-2 d-none d-md-flex flex-column align-items-center gap-3">
        <img src="/earser.png" class="home-side-img">
        <img src="/pencil.png" class="home-side-img">
      </div>

      <!-- Main Card -->
      <div class="col-md-6">
